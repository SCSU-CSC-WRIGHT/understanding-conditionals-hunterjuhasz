day_number = int(input("Enter a number between 1 and 7 to get the day of the week: "))

days_of_week = {
    1: "Monday",
    2: "Tuesday",
    3: "Wednesday",
    4: "Thursday",
    5: "Friday",
    6: "Saturday",
    7: "Sunday"
}

if day_number in days_of_week:
    print(f"Day {day_number} is {days_of_week[day_number]}.")
else:
    print("Please enter a valid number between 1 and 7.")